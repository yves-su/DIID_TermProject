<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 標題 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智能羽毛球拍 IMU 接收器"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <!-- 連接狀態卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 狀態指示器 -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_disconnected"
                android:layout_marginEnd="12dp" />

            <!-- 連接狀態文字 -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="狀態: 未連接"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <!-- 資料計數 -->
            <TextView
                android:id="@+id/dataCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:background="?attr/colorPrimaryContainer"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 控制按鈕卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/controlCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 掃描/連接按鈕 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/scanButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="掃描並連接"
                android:textSize="16sp"
                app:icon="@drawable/ic_scan_device"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnPrimary"
                android:layout_marginBottom="8dp" />

            <!-- 斷開連接按鈕 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/disconnectButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="斷開連接"
                android:enabled="false"
                android:layout_marginBottom="8dp" />

            <!-- 按鈕行（零點校正和錄製） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 零點校正按鈕 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/calibrateButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="零點校正"
                    app:icon="@drawable/ic_calibrate"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="24dp"
                    app:iconTint="?attr/colorPrimary"
                    android:layout_marginEnd="8dp" />

                <!-- 錄製按鈕 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recordButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="開始錄製"
                    app:icon="@drawable/ic_record_start"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="24dp"
                    app:iconTint="?attr/colorOnPrimary"
                    android:backgroundTint="@color/recording_inactive" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 狀態訊息卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusMessageCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/controlCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 校正狀態/進度 -->
            <TextView
                android:id="@+id/calibrationStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

            <!-- 錄製狀態 -->
            <TextView
                android:id="@+id/recordingStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 分隔線 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        app:layout_constraintTop_toBottomOf="@id/statusMessageCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 資料顯示區域（可滾動） -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 時間戳記 -->
            <TextView
                android:id="@+id/timestampText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="時間戳記: --"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 加速度 -->
            <TextView
                android:id="@+id/accelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 (g):\nX: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 角速度 -->
            <TextView
                android:id="@+id/gyroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 (dps):\nX: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 電壓 -->
            <TextView
                android:id="@+id/voltageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="電壓: -- V"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 最新資料（完整資訊） -->
            <TextView
                android:id="@+id/latestDataText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最新資料:\n--"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <!-- 圖表區域標題 -->
            <TextView
                android:id="@+id/chartTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="即時曲線圖（最近 5 秒）"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- 加速度 X 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 X 軸 (g)"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelXChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 加速度 Y 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 Y 軸 (g)"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelYChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 加速度 Z 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 Z 軸 (g)"
                android:textSize="12sp"
                android:textColor="#9C27B0"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelZChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 角速度 X 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 X 軸 (dps)"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyroXChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 角速度 Y 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 Y 軸 (dps)"
                android:textSize="12sp"
                android:textColor="#F44336"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyroYChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 角速度 Z 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 Z 軸 (dps)"
                android:textSize="12sp"
                android:textColor="#00BCD4"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyroZChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
